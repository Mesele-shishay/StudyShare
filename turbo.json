{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "env": {
    "@stud-share/tg-bot": [
      "BOT_TOKEN",
      "WEB_APP_URL",
      "DEBUG",
      "WEBHOOK_URL",
      "WEBHOOK_PATH"
    ]
  }
}
